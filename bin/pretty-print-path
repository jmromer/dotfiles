#!/usr/bin/env bash

# pretty-print the command search path

if [[ "$1" == "path" ]]; then
  paths="$PATH"
elif [[ "$1" == "manpath" ]]; then
  paths="$MANPATH"
elif [[ "$1" == "cdpath" ]]; then
  paths="$CDPATH"
fi

[[ -z "$paths" ]] && exit

path="$(
  echo "$paths" | tr ":" "\n" | nl -ba | fzf \
      --ansi \
      --no-sort \
      --reverse \
      --bind 'ctrl-f:preview-down' \
      --bind 'ctrl-b:preview-up' \
      --header="[find:${1}]" \
      --preview='exa -a1 --color=always {+2} 2>/dev/null' |
    awk '{ print $2 }'
)"

[[ -z "$path" ]] && exit

if [[ ! -d "$path" ]]; then
  echo "$path" && exit
fi

selection="$(
  exa -a1 --color=always "$path" |
  eval "fzf \
  --ansi \
  --no-sort \
  --reverse \
  --header='[find:${1}:${path}]' \
  --bind 'ctrl-f:preview-down' \
  --bind 'ctrl-b:preview-up'"
)"

if [[ -z "$selection" ]]; then
  pretty-print-path "$1"
else
  if [[ ! "$selection" =~ ^/ ]]; then
    echo "$path/$selection"
  else
    echo "$selection"
  fi
fi
