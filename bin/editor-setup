#!/usr/bin/env bash

#
# editor-setup
#
# Usage:
#   mx [OPTIONS]
#
#   Install some libraries.
#
# Examples:
#   editor-setup
#   editor-setup py
#   editor-setup rb py js
#   editor-setup js mac py
#   editor-setup all
#

setup_golang() {
  # GO111MODULE=on CGO_ENABLED=0 \
    # go get -v -trimpath -ldflags '-s -w' \
    # github.com/golangci/golangci-lint/cmd/golangci-lint
  export CC=gcc-10 CXX=g++-10
  while read -r package; do
    go get -u -v "${package}"
  done < "${XDG_CONFIG_HOME}/asdf/default-libraries-golang"
}

setup_ruby() {
  gem install \
    --update-sources \
    $(cat ${XDG_CONFIG_HOME}/asdf/default-libraries-ruby | tr '\n' ' ')
}

setup_system_ruby() {
  gem install \
    --user \
    --update-sources \
    $(cat ${XDG_CONFIG_HOME}/asdf/default-libraries-ruby | tr '\n' ' ')
}

setup_javascript() {
  while read -r package; do
    npm install --update --global "${package}"
  done < "${XDG_CONFIG_HOME}/asdf/default-libraries-nodejs"
}

setup_python() {
  while read -r package; do
    pip install --upgrade "${package}"
  done < "${XDG_CONFIG_HOME}/asdf/default-libraries-python"
}

setup_mac() {
  return
}

setup_emacs_plus() {
    [[ ! "$MACHINE" =~ (apple|intel-mac) ]] && return

    # emacs-plus mod: Render emacs app's title bar text for dark mode
    # https://github.com/syl20bnr/spacemacs/issues/11541
    is_enabled="$(defaults read org.gnu.Emacs NSRequiresAquaSystemAppearance 2>/dev/null)"

    if [[ "${is_enabled}" == "true" ]]; then
      echo "Disabling emacs-plus dark mode"
      defaults delete org.gnu.Emacs NSRequiresAquaSystemAppearance
    else
      echo "Enabling emacs-plus dark mode"
      defaults write org.gnu.Emacs NSRequiresAquaSystemAppearance true
    fi
}

message() {
    gprintf "\n-----------------------\n"
    gprintf "%s\n" "$1"
    gprintf "-----------------------\n\n"
}

usage() {
    grep '^#' < "$0" | tail -n +2 | cut -c 3-
}

[[ "$*" =~ "--help" ]] && usage && exit 2

[[ -z "$1" ]] && set -- all


while [ $# -gt -1 ]; do
    case "$1" in
        'all')
            set -- mac py rb js
            ;;
        'go')
            message "Installing Go Libraries"
            setup_golang
            shift
            ;;
        'js')
            message "Installing JavaScript Libraries"
            setup_javascript
            shift
            ;;
        'py')
            message "Installing Python Libraries"
            setup_python
            shift
            ;;
        'rb')
            message "Installing Ruby Libraries"
            setup_ruby
            shift
            ;;
      'sysrb')
            message "Installing System Ruby Libraries"
            setup_system_ruby
            shift
            ;;
        'mac')
            message "Configuring Mac"
            setup_mac
            shift
            ;;
        'emacs-plus')
            message "Configuring emacs-plus"
            setup_emacs_plus
            shift
            ;;
        "")
            exit 0
            ;;
        *)
            shift
            ;;
    esac
done
