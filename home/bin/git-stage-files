#!/usr/bin/env bash

# `git add` with fuzzy-selection
#
# Usage:
#   git stage-files
#   git stage-files file1 file2

set -e

if [[ -n "$1" ]]; then
  echo git add "$@"
  git add "$@"
  exit 0
fi

# fuzzy-select files
files="$(git-select-files)"

if [[ -z "$files" ]]; then
  exit 0
fi

IFS=$'\n'

for file in $files; do
  echo "git add $file"
  git add "${file//[\"\']/}"
done

git status -sb
