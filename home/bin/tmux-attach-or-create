#!/bin/sh

# Attach or create tmux session named the same as current directory.
path_name="$(basename "$PWD" | tr . -)"
session_name=${1:-"$path_name"}
tmux="tmux"

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux list-sessions |\
    sed -E 's/:.*$//' |\
    grep -q "^$session_name$"
}

create_detached_session() {
  (TMUX='' TERM=screen-256color-italic $tmux new-session -Ad -s "$session_name")
}

create_if_needed_and_attach() {
  if not_in_tmux; then
    TERM=screen-256color-italic $tmux new-session -As "$session_name"
  else
    if ! session_exists; then
      create_detached_session
    fi
    TERM=screen-256color-italic $tmux switch-client -t "$session_name"
  fi
}

create_if_needed_and_attach
